{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "pretty": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  }
}
